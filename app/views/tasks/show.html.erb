<div class="d-flex justify-content-between align-items-center">
  <h1><%= @task.title %></h1>
  <%= link_to "Edit", edit_path, class: "btn btn-primary" %>
</div>
<div class="details">
  <p><%= @task.details %></p>
</div>

<% if @task.completed? %>
  <p>✅ This task is complete!</p>
<% else %>
  <p>⬜ This task is not yet complete.</p>
<% end %>

<%= link_to "Back to tasks list", tasks_path, class: "btn btn-secondary btn-sm" %>
