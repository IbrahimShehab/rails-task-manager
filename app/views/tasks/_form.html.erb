<%= form_with model: task, class: "my-5 card p-4 shadow-sm" do |f| %>
  <div class="mb-3">
    <%= f.label :title, "Task Title", class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :details, "Task Details", class: "form-label" %>
    <%= f.text_area :details, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :completed, "Completed", class: "form-check-label" %>
    <%= f.check_box :completed, class: "form-check-input" %>
  </div>
    <%= f.submit class: "btn btn-primary" %>
<% end %>
